                <artifactId>data-auth</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>data-base</artifactId>
                <version>${project.version}</version>
            </dependency>
            
            <!-- Service Modules -->
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>service-base</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>service-strategy</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>service-portfolio</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>service-exchange</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>service-auth</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>service-walletaddress</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
