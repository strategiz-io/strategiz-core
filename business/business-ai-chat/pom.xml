<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.strategiz</groupId>
        <artifactId>strategiz-core</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>business-ai-chat</artifactId>
    <name>Business AI Chat</name>
    <description>AI-powered chat business logic for Learn, Labs, and other features</description>

    <dependencies>
        <!-- Business Base -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-base</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Client Base (LLMProvider interface) -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>client-base</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Gemini Vertex Client -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>client-gemini-vertex</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Claude Vertex Client -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>client-claude-vertex</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- OpenAI Vertex Client -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>client-openai-vertex</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Spring Boot -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>

        <!-- Spring WebFlux for reactive support -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- Jackson for JSON -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
