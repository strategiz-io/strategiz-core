    <properties>
        <java.version>21</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <firebase.admin.version>9.1.1</firebase.admin.version>
        <google.api.client.version>2.2.0</google.api.client.version>
        <google.api.gax.version>2.19.1</google.api.gax.version>
        <google.http.client.version>1.42.1</google.http.client.version>
        <vertex.ai.version>0.3.0</vertex.ai.version>
        <google.cloud.aiplatform.version>3.4.0</google.cloud.aiplatform.version>
        <google.cloud.firestore.version>3.15.4</google.cloud.firestore.version>
        <apache.httpclient.version>4.5.14</apache.httpclient.version>
        <synapse.version>0.3.32</synapse.version>
    </properties>
    
    <!-- Define repositories for dependencies -->
    <repositories>
        <!-- Maven Central is the primary repository -->
        <repository>
            <id>central</id>
            <name>Maven Central</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <!-- Local repository for project-specific dependencies -->
        <repository>
            <id>local-repo</id>
            <name>Local Repository</name>
            <url>file://${project.basedir}/local-repo</url>
        </repository>
    </repositories>
    
    <!-- Define repository mirrors to redirect requests -->
    <mirrors>
        <!-- Force all requests to go through Maven Central -->
        <mirror>
            <id>maven-central-mirror</id>
            <name>Maven Central Mirror</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <mirrorOf>*,!local-repo</mirrorOf>
        </mirror>
    </mirrors>

