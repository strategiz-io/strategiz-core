<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.strategiz</groupId>
        <artifactId>service</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>service-agents</artifactId>

    <description>AI Agents services - Signal Scout, Strategy Optimizer, Earnings Edge</description>

    <dependencies>
        <!-- Service Base -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>service-framework-base</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Business AI Chat -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-ai-chat</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Business Token Auth for authentication -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-token-auth</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Business Preferences for subscription/usage tracking -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-preferences</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Business Market Data for Signal Scout -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-marketdata</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Business Fundamentals for Earnings Edge -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-fundamentals</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- FMP Client for News and Fundamentals -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>client-fmp</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Finnhub Client for News -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>client-finnhub</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Spring Boot Web -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Spring WebFlux for SSE streaming -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>

        <!-- Validation -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <!-- JSON Processing -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- Swagger/OpenAPI Documentation -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <!-- Skip Spring Boot repackaging for this library module -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
