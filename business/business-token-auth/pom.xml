<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>io.strategiz</groupId>
        <artifactId>business</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    
    <artifactId>business-token-auth</artifactId>
    
    <description>Token authentication business logic for Strategiz</description>
    
    <dependencies>
        <!-- Data layer dependencies -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>data-session</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>data-auth</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>data-user</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- Business base dependency -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>business-base</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- Framework token issuance - for creating tokens -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>framework-token-issuance</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Framework authorization - for validating tokens -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>framework-authorization</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Framework secrets for Vault integration -->
        <dependency>
            <groupId>io.strategiz</groupId>
            <artifactId>framework-secrets</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- PASETO token library (still needed for TokenType enum) -->
        <dependency>
            <groupId>dev.paseto</groupId>
            <artifactId>jpaseto-api</artifactId>
            <version>0.7.0</version>
        </dependency>
        
        <!-- Spring dependencies -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>
        
        
        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        
        <!-- Testing dependencies -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
