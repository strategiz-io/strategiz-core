<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.0</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>io.strategiz</groupId>
    <artifactId>strategiz-core</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    
    <description>Strategiz Core Platform</description>

    <modules>
        <!-- Framework Modules (Build First) -->
        <module>framework/framework-core</module>
        <module>framework/framework-api-docs</module>

        
        <!-- Data Modules (Build Second) -->
        <module>data/data-auth</module>
        <module>data/data-base</module>
        <module>data/data-exchange</module>
        <module>data/data-portfolio</module>
        <module>data/data-strategy</module>
        <module>data/data-user</module>
        
        <!-- Auth Modules -->
        <!-- <module>auth</module> -->
        
        <!-- Client Modules (Build Third) -->
        <module>client/client-base</module>
        <module>client/client-alphavantage</module>
        <module>client/client-binanceus</module>
        <module>client/client-coinbase</module>
        <module>client/client-coingecko</module>
        <module>client/client-kraken</module>
        <!-- Temporarily commented out due to dependency issues -->
        <!-- <module>client/client-walletaddress</module> -->
        
        <!-- Service Modules (Build Fourth) -->
        <module>service/service-base</module>
        <module>service/service-strategy</module>
        <module>service/service-portfolio</module>
        <module>service/service-exchange</module>
        <module>service/service-auth</module>
        <module>service/service-marketplace</module>
        <!-- Temporarily commented out due to Firestore dependency issues -->
        <!-- <module>service/service-walletaddress</module> -->
        <module>service/service-dashboard</module>
        
        <!-- API Modules (Build Fifth) -->
        <module>api/api-auth</module>
        <module>api/api-base</module>
        <module>api/api-dashboard</module>
        <module>api/api-exchange</module>
        <module>api/api-monitoring</module>
        <module>api/api-portfolio</module>
        <module>api/api-strategy</module>
        
        <!-- Application Module (Build Last) -->
        <module>application</module>
    </modules>

    <properties>
        <java.version>21</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <firebase.admin.version>9.1.1</firebase.admin.version>
        <google.api.client.version>2.2.0</google.api.client.version>
        <google.api.gax.version>2.66.0</google.api.gax.version>
        <google.http.client.version>1.42.1</google.http.client.version>
        <vertex.ai.version>0.3.0</vertex.ai.version>
        <google.cloud.aiplatform.version>3.4.0</google.cloud.aiplatform.version>
        <google.cloud.firestore.version>3.15.4</google.cloud.firestore.version>
        <apache.httpclient.version>4.5.14</apache.httpclient.version>
        <synapse.version>0.3.32</synapse.version>
    </properties>
    
    <!-- Define repositories for dependencies -->
    <repositories>
        <!-- Maven Central is the primary repository -->
        <repository>
            <id>central</id>
            <name>Maven Central</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    

    <!-- Force specific versions of commonly used dependencies to avoid conflicts -->
    <dependencyManagement>
        <dependencies>

            <!-- New Auth Modules -->
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>auth-service</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>auth-api</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- data-user was missing from explicit management, ensure it's here -->
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>data-user</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Internal Module Versions -->
            <!-- Data Modules -->
            <dependency>
                <groupId>io.strategiz</groupId>
                <artifactId>data-strategy</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
